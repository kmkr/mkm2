<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <%= stylesheet_link_tag :all, :cache => true %>
    <script src="http://code.jquery.com/jquery-1.4.4.js"></script>
    <script>
      jQuery.noConflict();
    </script>
    <%= javascript_include_tag :defaults, 'jquery-ui-1.8.7.custom.min.js', 'OpenLayers', 'navigation', :cache => true %>
    <title><%= 'MKM :: ' %><%= h @title %></title>
  </head>
  <body>
    <div id="mainwrap">
      <div id="banner">
        <div style="float: left;">
          <p>
            <%= link_to 'Hjem', root_url %>
            <%= link_to 'Ny artikkel', new_article_path %>
          </p>
        </div>
        <%= render :partial => 'page/map_banner' %>
        <div id="navigation">
          <%= render :partial => 'continent/continent_navigation', :locals => { :continents => @continents } %>
        </div>
      </div>
      <div id="content">
        <% if flash[:error] %>
          <div id="flash_error">
            <%= flash[:error] %>
          </div>
        <% elsif flash[:warning] %>
          <div id="flash_warning">
            <%= flash[:warning] %>
          </div>
        <% elsif flash[:notice] %>
          <div id="flash_notice">
            <%= flash[:notice] %>
          </div>
        <% end %>
        <%= yield :layout %>
      </div>
    </div>
  </body>
</html>
