<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <%= stylesheet_link_tag 'common', 'navigation', 'openlayers', :cache => true %>
    <%= javascript_include_tag :defaults, 'OpenLayers', :cache => true %>
    <title>MKM</title>
  </head>
  <body>
    <div id="mainwrap">
      <div id="banner">
        <%= link_to 'Ny artikkel', new_article_path %>
        <%= render :partial => 'page/map_banner' %>
        <div id="navigation">
          <%= render :partial => 'continent/continent_navigation', :locals => { :continents => @continents } %>
        </div>
      </div>
      <div id="content">
        <%= yield :layout %>
      </div>
    </div>
  </body>
</html>
