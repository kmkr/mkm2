<%= render :partial => 'countries/country_map' %>
<div id="new_article">
  <fieldset>
    <legend>Ny artikkel</legend>
    <% form_for @article do |f| %>
      <p>
        <%= f.label :title, 'Tittel' %>
        <%= f.text_field :title %>
      </p>
  
      <p>
        <%= f.label :body, 'Innhold' %>
        <%= f.text_area :body %>
      </p>
  
      <p>
        <%= f.label(:actual_date, 'Dato') %>
        <span id="datetime_select">
          <%= f.datetime_select(:actual_date, :default => @article.actual_date) %>
        </span>
      </p>
  
      <p>
        <%= f.label :published, 'Publiser' %>
        <%= f.check_box :published %>
      </p>
  
      <p>
        <%= f.hidden_field :longitude %>
        <%= f.hidden_field :latitude %>
      </p>
  
      <p>
        <%= f.label 'article[country_id]', 'Omtaler' %>
        <%= select_tag "article[country_id]", options_from_collection_for_select(@countries, :id, :title) %>
      </p>
  
      <p>
        <%= f.submit 'Opprett artikkel' %>
      </p>
    <% end %>
  </fieldset>
</div>
